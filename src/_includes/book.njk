<button class="card" onclick="window.location.href='{% if type %}{{ type }}/{% endif %}{{ author }}{% if viz %}/{{ viz }}{% endif %}/index.html';">
    <div class="card-header">
        <img src="/images/bookimages/{{ author }}.jpg" alt="Cover of {{ built.Btitles[author] }}" class="card-image">
    </div>
    <div class="card-body">
        <h2 class="card-title">{{ built.Btitles[author] }}</h3>
        <p class="card-description"></p>
    </div>
</button>